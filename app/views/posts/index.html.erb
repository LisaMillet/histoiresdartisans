<%# BANNER %>
<div class="w-full bg-cover bg-center h-128" style="background-image: url(<%= image_path 'https://res.cloudinary.com/dvuyabyaw/image/upload/v1698405083/HdA/LisaMillet_HistoiresDartisans_MaisonAlivon_MarionSaussier_35_-_cropped_vahdkg.jpg' %>);">
    <div class="flex items-center justify-center h-full w-full bg-beige bg-opacity-50">
        <div class="text-center">
            <h1 class="text-green text-4xl font-monospace lg:text-5xl font-bold uppercase">Nos articles</h1>
        </div>
    </div>
</div>

<div class="lg:px-28 px-8 mx-auto my-3" >
  <% unless notice == "Signed in successfully." %>
    <p class="text-green mt-5 mb-5"><%= notice %></p>
  <% end %>

  <%# link readable if a user is signed in with Devise %>
  <% if user_signed_in? %>
    <%= link_to "+ Nouvel Article", new_post_path, class:"my-5 rounded-sm bg-orange hover:bg-green hover:text-beige text-beige font-bold text-1xl lg:text-base font-sans text-center mb-1 py-2 px-4" %>
  <% end %>
  <%# <%  %>

  <div id="posts-index" class="mt-5 grid grid-cols-2 lg:grid-cols-3 gap-4 px-20">
    <% @posts.each do |post| %>
      <%= render post %>
    <% end %>
  </div>
</div>
