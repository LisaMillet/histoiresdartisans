<%# meta tags %>
<% content_for :meta_title, "#{@post.title} is on #{DEFAULT_META["meta_product_name"]}" %>
<%# <% content_for :meta_description, @post.description %>
<% content_for :meta_image, cl_image_path(@post.photo.url) %>
<%# ... %>

<div class="container mx-auto mt-8">

  <%# breadcrumb bar - sorte de fil d'ariane %>
  <%= render "breadcrumb", post: @post %>
  <%# ... %>

  <%# links readable if a user is signed in with Devise %>
  <div class="flex justify-center my-10">
    <% if user_signed_in? %>
      <%= link_to edit_post_path(@post), class: "text-orange me-6" do %>
        <i class="fa-regular fa-pen-to-square"></i> Editer le post
      <% end %>
      <%= link_to post_path(@post), class: "text-orange me-4 text-red me-6", data: { turbo_method: :delete,turbo_confirm: "Are you sure?" } do %>
        <i class="fa-regular fa-trash-can"></i>Supprimer le post
      <% end %>
    <% end %>
  </div>
  <%= raw @post.content %>

</div>
