<div class="lg:px-28 px-2 mx-auto my-3">

  <%# breadcrumb bar - sorte de fil d'ariane %>
  <%= render "breadcrumb", first_element: "Tous les articles", first_element_path: posts_path, second_element: @post.title%>
  <%# ... %>

  <%# links readable if a user is signed in with Devise %>
  <div class="flex justify-center my-10">
    <% if user_signed_in? %>
      <%= link_to edit_post_path(@post), class: "text-orange me-6" do %>
        <i class="fa-regular fa-pen-to-square"></i> Editer le post
      <% end %>
      <%= link_to post_path(@post), class: "me-4 text-orange me-6", data: { turbo_method: :delete,turbo_confirm: "Voulez-vous supprimer cet article?" } do %>
        <i class="fa-regular fa-trash-can"></i>Supprimer le post
      <% end %>
    <% end %>
  </div>
  <%= raw @post.content %>
</div>
