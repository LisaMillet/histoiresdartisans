<div class="bg-orange grid grid-cols-1 h-full lg:grid-cols-1 content-start lg:w-[400px] rounded-sm">
  <div>
    <%= link_to post_path(post) do %>
    <%# picture of a post %>
      <% if post.photo.key.present? %>
        <div>
          <%= cl_image_tag post.photo.key, height: 300, width: 700, crop: :fill, class:"h-[200px] object-cover rounded-sm w-full" %>
          </div>
      <% end %>
    <% end %>
    </div>

  <div class="p-3">
    <%= link_to post_path(post) do %>
      <h3 class="text-beige mb-3"><%= post.title.size > 50 ? post.title.first(30) << "..." : post.title %></h3>
      <p class="mb-5 text-beige">Par <%= post.author %></p>
      <p class="mb-4 text-beige"><%= post.summary %></p>
    <% end %>
  </div>
</div>
